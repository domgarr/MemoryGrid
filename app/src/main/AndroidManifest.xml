<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.domgarr.android.memorygrid"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.domgarr.android.memorygrid.GameActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.domgarr.android.memorygrid.GoalGridActivity"
            android:label="@string/title_activity_goal"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.domgarr.android.memorygrid.FillGridActivity"
            android:label="@string/title_activity_fill"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>